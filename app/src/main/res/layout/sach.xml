<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    app:cardElevation="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_layout_Sach_Ma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="Mã sách: 1"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:id="@+id/tv_layout_Sach_Ten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="Tên sách: Photoshop"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:id="@+id/tv_layout_Sach_TG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="Tác giả: Nguyễn Văn A"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:id="@+id/tv_layout_Sach_NXB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="NXB: Kim đồng"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:id="@+id/tv_layout_Sach_LoaiSach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="Loại sách: CNTT"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:id="@+id/tv_layout_Sach_GiaThue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="Giá thuê: 20000"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:paddingLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="right">
                <ImageView
                    android:id="@+id/btnSuaSach"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/ic_edit"/>
                <ImageView
                    android:id="@+id/btnXoaSach"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/ic_delete" />
            </LinearLayout>
        </LinearLayout>

</androidx.cardview.widget.CardView>